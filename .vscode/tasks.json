{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Compilar com GCC",
      "type": "shell",
      "command": "gcc",
      "args": [
        "-Wall",
        "-Wextra",
        "-g3",
        "grafos.c",
        "Stack.c",
        "Queue.c",
        "-o",
        "output/grafos.exe"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": [],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "dedicated",  // <- TERMINAL DEDICADO (não some!)
        "showReuseMessage": false,  // <- NÃO mostra aquela mensagem "pressione qualquer tecla"
        "clear": true  // <- limpa a tela antes de compilar de novo
      },
      "runOptions": {
        "reevaluateOnRerun": true  // <- permite recompilar sem fechar terminal
      }
    }
  ]
}
